# Python Camera System Production Environment
DB_HOST=railway-mysql-host
DB_USER=root
DB_PASSWORD=your-railway-db-password
DB_NAME=attendance_system
DB_PORT=3306

# Face Recognition Settings
CONFIDENCE_THRESHOLD=0.6
FACE_DETECTION_MODEL=hog
FACE_RECOGNITION_MODEL=large

# Camera Settings (for cloud deployment, camera might not be available)
CAMERA_INDEX=0
FRAME_WIDTH=640
FRAME_HEIGHT=480
CAMERA_FPS=30

# System Settings
LOG_LEVEL=INFO
MAX_FACE_DISTANCE=0.6
PROCESSING_TIMEOUT=10

# Cloud Settings
ENVIRONMENT=production
DISABLE_CAMERA=true  # Set to true for cloud deployment without camera
